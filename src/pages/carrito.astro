---
// src/pages/carrito.astro
import '../styles/global.css';
import BaseLayout from '../layouts/Layout.astro';
import CartItem from '../components/cart/CartItem.astro';
import CartSummary from '../components/cart/CartSummary.astro';
import { cartItems, cartTotal, cartCount } from '../../public/scripts/cart.js';
---

<BaseLayout title="Carrito | TechPeripherals" description="Revisa los productos en tu carrito de compras">
  <div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold text-white mb-8">Tu carrito</h1>
    
    {cartCount() > 0 ? (
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <div class="lg:col-span-2">
          <div class="bg-gray-800 rounded-lg p-6">
            <h2 class="text-xl font-semibold text-white mb-6">Productos ({cartCount()})</h2>
            
            <div class="divide-y divide-gray-700">
              {cartItems().map((item: any) => (
                <CartItem product={item} />
              ))}
            </div>
          </div>
        </div>
        
        <div>
          <CartSummary />
          <a 
            href="/checkout" 
            class="block w-full mt-4 text-center px-6 py-3 bg-purple-600 hover:bg-purple-700 rounded-md text-white font-bold transition-colors"
          >
            Proceder al pago
          </a>
        </div>
      </div>
    ) : (
      <div class="text-center py-16">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 mx-auto text-gray-500 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" />
        </svg>
        <h2 class="text-2xl font-bold text-white mb-2">Tu carrito está vacío</h2>
        <p class="text-gray-400 mb-6">Añade algunos productos para continuar</p>
        <a 
          href="/productos/todos" 
          class="inline-block px-8 py-3 bg-purple-600 hover:bg-purple-700 rounded-md text-white font-bold transition-colors"
        >
          Ver productos
        </a>
      </div>
    )}
  </div>
</BaseLayout>