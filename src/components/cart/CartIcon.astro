// src/components/cart/CartIcon.astro
// No importar cart aquí - se maneja en el cliente
---

<a href="/carrito" class="relative" onclick="event.preventDefault(); cart.open()">
  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 0 11-4 0 2 2 0 014 0z" />
  </svg>
  <span data-cart-count class="absolute -top-2 -right-2 bg-purple-600 text-white text-xs font-bold rounded-full h-5 w-5 flex items-center justify-center">
    0
  </span>
</a>

<script type="module">
  import { cart } from '/scripts/cart.js';
  
  // Asegurar que el carrito esté disponible globalmente
  window.cart = cart;
  
  // Inicializar solo si no se ha hecho antes
  if (!window.cartInitialized) {
    cart.init();
    window.cartInitialized = true;
    console.log('Cart initialized from CartIcon component');
  }
</script>