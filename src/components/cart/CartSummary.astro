---
// src/components/cart/CartSummary.astro
import { cart } from '../../../public/scripts/cart';
---

<div class="bg-gray-800 p-6 rounded-lg">
  <h3 class="text-xl font-semibold text-white mb-4">Resumen del pedido</h3>
  
  <div class="space-y-4">
    <div class="flex justify-between">
      <span class="text-gray-400">Productos (<span data-cart-count>{cart.count()}</span>)</span>
      <span class="text-white" data-cart-total>{cart.total().toFixed(2)} €</span>
    </div>
    
    <div class="flex justify-between border-t border-gray-700 pt-4">
      <span class="text-gray-400">Envío</span>
      <span class="text-white">Gratis</span>
    </div>
    
    <div class="flex justify-between border-t border-gray-700 pt-4">
      <span class="text-lg font-semibold text-white">Total</span>
      <span class="text-xl font-bold text-purple-400" data-cart-total>{cart.total().toFixed(2)} €</span>
    </div>
  </div>
</div>