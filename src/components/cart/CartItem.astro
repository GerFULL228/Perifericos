---
// src/components/cart/CartItem.astro
const { product } = Astro.props;
const { updateQuantity, removeFromCart} = await import('../../../public/scripts/cart');
---

<div class="flex items-center py-4 border-b border-gray-700">
  <div class="flex-shrink-0">
    <img src={product.image} alt={product.name} class="w-20 h-20 object-cover rounded-md">
  </div>
  
  <div class="ml-4 flex-grow">
    <h3 class="text-white font-medium">{product.name}</h3>
    <p class="text-gray-400">{product.price} â‚¬</p>
  </div>
  
  <div class="flex items-center">
    <div class="flex items-center border border-gray-600 rounded-md">
      <button 
        onclick={`updateQuantity('${product.id}', ${product.quantity - 1})`} 
        class="px-3 py-1 text-gray-400 hover:text-white"
        disabled={product.quantity <= 1}
      >
        -
      </button>
      <span class="px-3 py-1 text-white">{product.quantity}</span>
      <button 
        onclick={`updateQuantity('${product.id}', ${product.quantity + 1})`} 
        class="px-3 py-1 text-gray-400 hover:text-white"
      >
        +
      </button>
    </div>
    
    <button 
      onclick="removeFromCart('${product.id}')" 
      class="ml-4 text-red-500 hover:text-red-400"
    >
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
      </svg>
    </button>
  </div>
</div>