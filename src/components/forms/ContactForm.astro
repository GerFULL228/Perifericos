---
// src/components/forms/ContactForm.astro

---

<form class="space-y-6">
  <div>
    <label for="name" class="block text-sm font-medium text-amber-600 mb-1">Nombre</label>
    <input 
      type="text" 
      id="name" 
      name="name" 
      required 
      class="w-full bg-gray-800 border border-gray-700 rounded-md px-4 py-2 text-white focus:outline-none focus:ring-2 focus:ring-purple-500"
    >
  </div>
  
  <div>
    <label for="email" class="block text-sm font-medium text-white mb-1">Email</label>
    <input 
      type="email" 
      id="email" 
      name="email" 
      required 
      class="w-full bg-gray-800 border border-gray-700 rounded-md px-4 py-2 text-white focus:outline-none focus:ring-2 focus:ring-purple-500"
    >
  </div>
  
  <div>
    <label for="subject" class="block text-sm font-medium text-white mb-1">Asunto</label>
    <input 
      type="text" 
      id="subject" 
      name="subject" 
      required 
      class="w-full bg-gray-800 border border-gray-700 rounded-md px-4 py-2 text-white focus:outline-none focus:ring-2 focus:ring-purple-500"
    >
  </div>
  
  <div>
    <label for="message" class="block text-sm font-medium text-white mb-1">Mensaje</label>
    <textarea 
      id="message" 
      name="message" 
      rows="4" 
      required 
      class="w-full bg-gray-800 border border-gray-700 rounded-md px-4 py-2 text-white focus:outline-none focus:ring-2 focus:ring-purple-500"
    ></textarea>
  </div>
  
  
</form>