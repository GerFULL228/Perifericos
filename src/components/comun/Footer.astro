            <i class="fab fa-facebook-f"></i>
          </a>
          <a href="#" class="text-gray-400 hover:text-blue-400 transition-colors">
            <i class="fab fa-twitter"></i>
          </a>
          <a href="#" class="text-gray-400 hover:text-blue-400 transition-colors">
            <i class="fab fa-instagram"></i>
          </a>
          <a href="#" class="text-gray-400 hover:text-blue-400 transition-colors">
            <i class="fab fa-discord"></i>
          </a>
        </div>
      </div>

      <!-- Categorías -->
