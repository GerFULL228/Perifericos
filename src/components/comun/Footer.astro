        <h4 class="text-lg font-semibold mb-4 pb-2 border-b border-gray-700">Categorías</h4>
        <ul class="space-y-2">
          {categorias.map(cat => (
            <li>
              <a 
                href={`/productos/${slugify(cat)}`} 
